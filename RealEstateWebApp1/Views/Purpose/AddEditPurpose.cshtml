@model PurposeMasterViewModel
@{
    Layout = null;
}


<form asp-action="SavePurpose" asp-controller="Purpose" method="post" onsubmit="return jQueryAjaxPost(this);">

    <input type="hidden" asp-for="PurposeId" />

    <div class="mb-3 mt-3">
        <label for="PurposeName" class="form-label">PurposeName:</label>
        <input type="text" class="form-control" id="PurposeName" placeholder="Enter Purpose" asp-for="PurposeName">
    </div>


    <div class=" form-group">
        <input type="submit" value="save" class="btn-primary btn" />
        <button type="button" class="btn btn-danger" data-bs-dismiss="offcanvas">Cancel</button>
    </div>

</form>