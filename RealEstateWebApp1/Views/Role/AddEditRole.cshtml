@model RoleMasterViewModel
@{
    Layout = null;
}


<form asp-action="SaveRole" asp-controller="Role" method="post" onsubmit="return jQueryAjaxPost(this);">

    <input type="hidden" asp-for="RoleId" />


    <div class="mb-3 mt-3">
        <label for="RoleName" class="form-label">RoleName:</label>
        <input type="text" class="form-control" id="RoleName" placeholder="Enter Role" asp-for="RoleName">
    </div>


    <div class=" form-group">
        <input type="submit" value="save" class="btn-primary btn" />
        <button type="button" class="btn btn-danger" data-bs-dismiss="offcanvas">Cancel</button>
    </div>

</form>